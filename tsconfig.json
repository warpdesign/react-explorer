{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2020",
    "jsx": "react",
    "removeComments": true,
    "lib": ["es6", "dom"],
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node", "electron", "jest", "webpack", "webpack-env"],
    "useDefineForClassFields": true
  },
  "include": ["./src/**/*"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
