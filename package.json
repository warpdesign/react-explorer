{
    "name": "react-explorer",
    "version": "2.1.1",
    "description": "Plugin-based file explorer written with React",
    "main": "build/main.js",
    "build": {
        "productName": "React-Explorer",
        "appId": "reactexplorer",
        "mac": {
            "gatekeeperAssess": false,
            "darkModeSupport": true,
            "icon": "icon.icns"
        },
        "win": {
            "icon": "icon.ico"
        },
        "linux": {
            "synopsis": "React-based FileManager",
            "description": "Plugin-based file explorer written with React",
            "category": "FileManager",
            "target": [
                "deb",
                "AppImage"
            ]
        },
        "files": [
            "build/**/*"
        ]
    },
    "scripts": {
        "test": "jest",
        "test:e2e": "npm run server:stop && cd e2e && npm run build && npm run server && npm run cypress:run --config video=false && pm2 stop cy-server",
        "test:all": "npm run test:e2e && npm run test",
        "build": "webpack --watch",
        "server": "pm2 start \"npx ws -d ./build-e2e -p 8080\" --name cy-server",
        "server:stop": "pm2 --silent stop cy-server || true",
        "ftpd": "ftp-srv ftp://0.0.0.0:9876 --root /tmp/react-explorer -c ./credentials.json",
        "dist": "webpack --config webpack.config.production.js && electron-builder -mwl",
        "dist-win": "webpack --config webpack.config.production.js && electron-builder -w",
        "dist-mac": "webpack --config webpack.config.production.js && electron-builder -m",
        "dist-linux": "webpack --config webpack.config.production.js && electron-builder -l",
        "postinstall": "electron-builder install-app-deps && npm run install:e2e",
        "install:e2e": "cd e2e && npm install"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run test:all"
        }
    },
    "author": {
        "name": "Nicolas Ramz",
        "email": "nicolas.ramz@gmail.com",
        "url": "https://www.warpdesign.fr"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/classnames": "^2.2.9",
        "@types/hoist-non-react-statics": "^3.3.1",
        "@types/i18next": "^12.1.0",
        "@types/jest": "^24.0.18",
        "@types/mock-fs": "^4.10.0",
        "@types/react-i18next": "^8.1.0",
        "@types/react-virtualized": "^9.21.4",
        "@types/webpack-env": "^1.14.0",
        "awesome-typescript-loader": "^5.2.1",
        "aws-sdk": "^2.514.0",
        "clean-webpack-plugin": "^2.0.2",
        "copy-webpack-plugin": "^5.0.4",
        "css-loader": "^1.0.1",
        "electron": "^3.1.13",
        "electron-builder": "^21.2.0",
        "electron-devtools-installer": "^2.2.4",
        "file-loader": "^2.0.0",
        "ftp-srv": "^3.1.1",
        "hoist-non-react-statics": "^3.3.0",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^3.0.9",
        "jest": "^24.9.0",
        "local-web-server": "^3.0.7",
        "mock-fs": "github:warpdesign/mock-fs",
        "native-ext-loader": "^2.3.0",
        "pm2": "^4.1.2",
        "source-map-loader": "^0.2.4",
        "style-loader": "^0.23.1",
        "terser-webpack-plugin": "^2.2.1",
        "ts-jest": "^24.1.0",
        "typescript": "^3.5.3",
        "url-loader": "^1.1.2",
        "wait-on": "^3.3.0",
        "webpack": "^4.39.2",
        "webpack-cli": "^3.3.7"
    },
    "dependencies": {
        "@blueprintjs/core": "^3.18.0",
        "@blueprintjs/select": "^3.10.0",
        "@types/mkdirp": "^0.5.2",
        "@types/react": "^16.9.2",
        "@types/react-dom": "^16.9.0",
        "basic-ftp": "^3.8.1",
        "classnames": "^2.2.6",
        "del": "github:warpdesign/del",
        "drivelist": "^8.0.7",
        "electron-window-state": "github:warpdesign/electron-window-state",
        "get-folder-size": "^2.0.1",
        "i18next": "^13.1.5",
        "mkdirp": "^0.5.1",
        "mobx": "^3.2.1",
        "mobx-react": "^4.2.2",
        "mobx-react-devtools": "^4.2.15",
        "react": "^16.9.0",
        "react-dnd": "^7.7.0",
        "react-dnd-html5-backend": "^7.7.0",
        "react-dnd-text-dragpreview": "^0.2.3",
        "react-dom": "^16.9.0",
        "react-i18next": "^8.4.0",
        "react-virtualized": "^9.21.1"
    }
}